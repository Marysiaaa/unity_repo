using UnityEngine;

[RequireComponent(typeof(CharacterController))]
public class PlayerMovement : MonoBehaviour
{
    public float predkosc = 5f;
    public float wysokosc_skoku = 0.5f;
    public float g= -9.81f;

    private CharacterController controler;
    private Vector3 prekosc_2;

    void Start()
    {
        controler = GetComponent<CharacterController>();
    }

    void Update()
    {

        float h = Input.GetAxis("Horizontal");
        float v = Input.GetAxis("Vertical");
        Vector3 move = new Vector3(h, 0, v);
        controler.Move(move * predkosc * Time.deltaTime);


        if (controler.isGrounded && prekosc_2.y < 0)
            prekosc_2.y = -2f;


        if (Input.GetButtonDown("Jump") && controler.isGrounded)
            prekosc_2.y = Mathf.Sqrt(wysokosc_skoku * -2f * g);

        prekosc_2.y += g * Time.deltaTime;
        controler.Move(prekosc_2 * Time.deltaTime);

    }
}
